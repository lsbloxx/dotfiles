; vim:ft=dosini
; https://github.com/polybar/polybar/wiki
;
; https://fontawesome.com/icons?d=gallery&p=2&m=free
; https://www.nerdfonts.com/cheat-sheet
; echo -n "\uE021" | xclip -selection clipboard

[bar/top]
monitor = ${env:MONITOR:eDP1}
width = 100%
height = 22

background = ${colors.background}
foreground = ${colors.foreground}
line-color = ${colors.foreground}
line-size = 2

border-color = ${colors.background}
border-size = 0
border-top-size = 1
border-bottom-size = 1

padding-left = 1
padding-right = 1
module-margin-left = 1
module-margin-right = 1

font-0 = SauceCodePro\ Nerd\ Font:regular:size=11;0
font-1 = FontAwesome:size=11;0

modules-left = i3 vpn bluetooth
modules-center =
modules-right = wifi-traffic wifi eth-traffic eth filesystem cpu memory xbacklight volume battery1 battery2 systemd-failed date

tray-position = right
scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[settings]
screenchange-reload = true

[colors]
# rigel color theme: https://github.com/rigellute/rigel
# python: hex(int(256*0.95)) => 0xf3 for 95% transparency
background = #f3002635
foreground = #e6e6dc
black1 = #00384d
black2 = #517f8d
red1 = #c43061
red2 = #ff5a67
green1 = #7fc06e
green2 = #9cf087
orange  = #f08e48
yellow = #ffcc1b
blue1 = #1c8db2
blue2 = #7eb2dd
magenta1 = #c694ff
magenta2 = #fb94ff
cyan1 = #00cccc
cyan2 = #00ffff
white1 = #77929e
white2 = #b7cff9


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
pin-workspaces = false

label-mode = %mode%
label-mode-padding = 1
label-mode-background = ${colors.background}
label-mode-underline = ${colors.red1}

label-focused = %index%
label-focused-background = ${colors.background}
label-focused-foreground = ${colors.foreground}
label-focused-underline = ${colors.yellow}
label-focused-padding = 1

label-unfocused = %index%
label-unfocused-background = ${self.label-focused-background}
label-unfocused-padding = ${self.label-focused-padding}

label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${colors.foreground}
label-visible-padding = ${self.label-focused-padding}

label-urgent = %index%
label-urgent-underline = ${colors.red1}
label-urgent-padding = ${self.label-focused-padding}

[module/xwindow]
type = internal/xwindow
label = %title:0:50:...%

[module/filesystem]
type = internal/fs
interval = 30
mount-0 = /
label-mounted = " %percentage_used%%  %free%"
label-mounted-underline = ${colors.foreground}

[module/cpu]
type = internal/cpu
interval = 1.0
format-prefix = "  "
format-underline = ${colors.foreground}
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 5.0
format-prefix = " "
format-underline = ${colors.foreground}
label = %percentage_used%%

[module/wifi]
type = internal/network
interface = wlp4s0
interval = 10.0
label-connected = "  %essid%  %signal%%  %local_ip%"
format-connected = <label-connected>
format-connected-underline = ${colors.foreground}
format-disconnected =

[module/eth]
type = internal/network
interface = enp0s31f6
interval = 10.0
label-connected = " %local_ip%"
format-connected = <label-connected>
format-connected-underline = ${colors.foreground}
format-connected-foreground = ${colors.foreground}
format-disconnected =

[module/wifi-traffic]
type = internal/network
interface = ${module/wifi.interface}
interval = 1.0
label-connected = " %downspeed%   %upspeed%"
format-connected = <label-connected>
format-connected-underline = ${colors.foreground}

[module/eth-traffic]
inherit = module/wifi-traffic
interface = ${module/eth.interface}

[module/date]
type = internal/date
interval = 30
date = "%a %d.%m.%y"
date-alt = ${self.date}
time =
time-alt = " %H:%M"
format-prefix = " "
label = %date%%time%

[module/volume]
type = internal/pulseaudio
interval = 1.0
use-ui-max = true
click-right = pavucontrol

ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
label-volume = %percentage%%
format-volume = <ramp-volume> <label-volume>
label-volume-foreground = ${colors.foreground}
format-volume-underline = ${colors.foreground}

label-muted = " muted"
label-muted-foreground = ${colors.foreground}
format-muted-underline = ${colors.red1}

[module/battery1]
type = internal/battery
battery = BAT1
adapter = AC
full-at = 98
time-format = %H:%M

format-charging = <animation-charging>  <label-charging>
format-charging-underline = ${colors.green1}
label-charging = %percentage%% %time%

format-discharging = <ramp-capacity>  <label-discharging>
format-discharging-underline = ${colors.orange}
label-discharging = %percentage%% %time%

format-full-prefix = " "
format-full-underline = ${self.format-charging-underline}
label-full = 100%

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750

[module/battery2]
inherit = module/battery1
battery = BAT0
format-full =

[module/xbacklight]
type = internal/xbacklight
output = eDP1
label = %percentage%%
format = "  <label>"
format-underline = ${colors.foreground}

[module/systemd-failed]
type = custom/script
exec = (systemctl --failed --all --no-pager; systemctl --failed --all --no-pager --user) | grep --color=never -c '^●.*failed'
exec-if = ${self.exec}
tail = false
interval = 5
format-prefix = "  "
format-underline = ${colors.red1}
click-left = (systemctl --all --failed; systemctl --user --all --failed)  | grep --color=never -Po '.*(?<=●)\K.*?(?=\s+loaded.*)' | notify-send "$(< /dev/stdin)" -t 3000

[module/vpn]
type = custom/script
exec = echo VPN
exec-if = pgrep -x sshuttle
interval = 10
format-underline = ${colors.green1}
format-prefix = "歷 "

[module/bluetooth]
type = custom/script
exec = echo BT
exec-if = systemctl is-active bluetooth.service
interval = 10
format-underline = ${colors.green1}
format-prefix = " "
